[
    {
        "$match": {
            "updatedAt": {
                "$gte": "{{ prev_data_interval_start_success }}",
                "$lte": "{{ data_interval_end }}"
            }
        }
    },
    {
        "$unwind": {
            "path": "$notes",
            "includeArrayIndex": "arrayIndex"
        }
    },
    {
        "$replaceRoot": {
            "newRoot": {
                "$mergeObjects": [
                  {
                    "order_id": "$_id",
                    "arrayIndex": "$arrayIndex"
                  },
                  "$notes"
                ]
            }
        }
    },
    {
      "$set": {
        "id": {
                "$concat": [
                  {"$toString": "$order_id"},
                  "__",
                  {"$toString": "$arrayIndex"},
                  "__",
                  {"$toString": "$_id"}
                ]
            }

      }
    },
    {
        "$project": {
            "notes": 0,
            "_id": 0,
            "arrayIndex": 0
        }
    },
    { "$skip": 0 },
    { "$limit": 5000}
]
