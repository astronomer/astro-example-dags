[
    {
        "$match": {
            "updatedAt": {
                "$gte": "{{ prev_data_interval_start_success }}",
                "$lte": "{{ data_interval_end }}"
            }
        }
    },
    {
        "$unwind": {
            "path": "$appointments",
            "includeArrayIndex": "arrayIndex"
        }
    },
    {
        "$set": {
            "order_id": "$_id",
            "appointment_id": "$appointments",
            "id": {
                "$concat": [
                  {"$toString": "$_id"},
                  "__",
                  {"$toString": "$arrayIndex"}
                ]
            }
        }
    },
    {
        "$project": {
            "appointment_id": 1,

            "order_id": 1,
            "id":1,
            "_id":0
        }
    },
    { "$skip": 0 },
    { "$limit": 5000}
]
