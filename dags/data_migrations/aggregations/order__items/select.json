[
    {
        "$match": {
            "updatedAt": {
                "$gte": "{{ prev_data_interval_start_success }}",
                "$lte": "{{ data_interval_end }}"
            }
        }
    },
    { "$unwind": "$items" },
    {
        "$replaceRoot": {
            "newRoot": {
                "$mergeObjects": [
                  {
                    "order_id": "$_id"
                  },
                  "$items"
                ]
            }
        }
    },
    { "$set": { "id": "$_id"}},
    {
        "$project": {
            "items": 0,
            "_id": 0,
            "request_detail": 0
        }
    },
    { "$skip": {{ offset | default(0) }} },
    { "$limit": {{ limit | default(1) }} }
]
